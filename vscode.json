{
    "editor.fontFamily": "Input",
    "editor.fontSize": 18,
    "editor.minimap.enabled": false,
    "editor.tabSize": 2,
    "editor.rulers": [73],
    "editor.cursorBlinking": "solid",
    "explorer.confirmDelete": false,
    "window.zoomLevel": 0,
    "explorer.confirmDragAndDrop": false,
    "json.schemas": [
        {
            "fileMatch": ["bsconfig.json"],
            "url": "https://bucklescript.github.io/bucklescript/docson/build-schema.json"
        }
    ],
    "reason.diagnostics.tools": [
        "merlin"
    ],
    "editor.quickSuggestions": {
        "other": false,
        "comments": false,
        "strings": false
    },
    "workbench.colorTheme": "Solarized Light",
    "java.errors.incompleteClasspath.severity": "ignore",
    "java.configuration.checkProjectSettingsExclusions": false,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "files.insertFinalNewline": true,
    "editor.fontLigatures": true,
    "workbench.editor.enablePreview": false,
    "reason_language_server.autoRebuild": false,
    "reason_language_server.useOldDuneProcess": false,
    "reason_language_server.dependencies_codelens": false,
    "reason_language_server.opens_codelens": false,
    "javascript.suggest.completeJSDocs": false,
    "typescript.suggest.completeJSDocs": false,
    "editor.defaultFormatter": "jaredly.reason-vscode",
    "editor.lineNumbers": "interval"
}