[fetch]
  prune = true
[user]
	name = Yawar Amin
	email = yawar.amin@gmail.com
[merge]
	tool = vimdiff
	conflictstyle = diff3
[color]
	ui = auto
[color "status"]
  added = blue
  changed = green
[alias]
  co = checkout
  st = status
  ci = commit
  lol = log --graph --abbrev-commit --decorate --all --pretty=oneline
  pf = push --force-with-lease
  pr = push -u origin
  heads = branch --no-merge
  fixup = "!f() { TARGET=$(git rev-parse "$1"); git commit --fixup=$TARGET ${@:2} && EDITOR=true git rebase -i --autostash --autosquash $TARGET^; }; f"
[core]
	autocrlf = false
[diff]
  algorithm = histogram
	guitool = kdiff3
[branch]
	autosetupmerge = always
	autosetuprebase = always
  sort = -committerdate
[gui]
	commitmsgwidth = 72
[rebase]
  updateRefs = true
[pull]
  rebase = true
[commit]
  verbose = true

